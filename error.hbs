      {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        background-color: rgba(0,0,0,.6);
        position: absolute;
        padding: 15%;
        text-align: center;
      }
      
      #fullscreen-image
      {
	  	position: fixed; 
	  	top: -50%; 
	  	left: -50%; 
	  	width: 200%; 
	  	height: 200%;
      }
      #fullscreen-image img
      {
	  	position: absolute; 
		top: 0; 
		left: 0; 
		right: 0; 
		bottom: 0; 
		margin: auto; 
		min-width: 50%;
		min-height: 50%;
